%    \begin{macrocode}
  \scantokens{
    \DeclareFontShape{C70}{#1}{m}{n}{<-> CJK * zhm\the\zhmfamcnt}{}
    \DeclareFontShape{C70}{#1}{bx}{n}{<-> CJKb * zhm\the\zhmfamcnt}{\CJKbold}
  }
}
%    \end{macrocode}
% \end{macro}
%
% \begin{macro}{\zhm@mapline}
% 添加实际字体映射。为 pdf\TeX{} 与 DVIPDFMx 引擎使用不同的命令完成
