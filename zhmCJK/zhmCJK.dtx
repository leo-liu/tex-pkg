% \begin{macro}{\zhm@definefont}
% 定义 CJK 字体族。模拟 |.fd| 文件的定义 \cite{Lemberg2008fonts}。
%    \begin{macrocode}
\def\zhm@definefont#1{
  \DeclareFontFamily{C70}{#1}{\hyphenchar\font\m@ne}
%    \end{macrocode}
