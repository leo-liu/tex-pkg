% \begin{macro}{\zhm@newfontfamily}
% 设置一个 CJK 新字体族。三个参数分别为：选项，字体族名，字体文件名。
%    \begin{macrocode}
\def\zhm@newfontfamily[#1]#2#3{
  \begingroup
%    \end{macrocode}
% 警告字体族重定义
%    \begin{macrocode}
  \ifcsname zhm@#2@font\endcsname
    \PackageWarning{zhmCJK}{Redefnition of CJK family `#2'.}
  \fi
%    \end{macrocode}
% 缓存字体族名及对应主字体文件名。
%    \begin{macrocode}
  \edef\zhm@fam{#2}
  \expandafter\xdef\csname zhm@#2@font\endcsname{#3}
%    \end{macrocode}
% 检查并定义实际字体。
%    \begin{macrocode}
  \zhm@DeclareRealFont{#3}
%    \end{macrocode}
% 定义 CJK 字体族和标准字形。模拟 ".fd" 文件的定义 \cite{Lemberg2008fonts}。
%    \begin{macrocode}
  \DeclareFontFamily{C70}{\zhm@fam}{\hyphenchar\font\m@ne}
  \zhm@DeclareFontShape{C70}{\zhm@fam}{m}{n}{<-> CJK * \zhm@tfm}{}
%    \end{macrocode}
% 按选项定义其他字形。
%    \begin{macrocode}
  \setkeys{zhm}{AutoFakeBold}
  \setkeys{zhm}{#1}
%    \end{macrocode}
% 按需要，定义伪粗体字形。
%    \begin{macrocode}
  \ifzhm@fakebold
    \zhm@DeclareRealFont{#3}
    \zhm@DeclareFontShape{C70}{\zhm@fam}{bx}{n}{<-> CJKb * \zhm@tfm}{\CJKbold}
    \zhm@DeclareFontShape{C70}{\zhm@fam}{b}{n}{<-> CJKb * \zhm@tfm}{\CJKbold}
  \fi
  \endgroup}
%    \end{macrocode}
% \end{macro}
