%    \begin{macrocode}
    \AtBeginDocument{%
      \@ifpackageloaded{atbegshi}{\AtBeginShipoutFirst{%
        \zhm@mapline{#2}}}{}}
  \fi
}
\@onlypreamble\setCJKfamilyfont
