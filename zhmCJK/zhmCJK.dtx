% \begin{macro}{\zhm@mapline}
% 添加实际字体映射行，两个参数是字体编号和字体文件名。为 pdf\TeX{} 与 DVIPDFMx
% 引擎使用不同的命令完成 \cite{Thanh2009}。
%    \begin{macrocode}
\ifpdf
  \def\zhm@mapline#1#2{%
    \pdfmapline{=zhm#1@Unicode@ <#2}}
\else
  \def\zhm@mapline#1#2{%
    \special{pdf:mapline zhm#1@Unicode@ unicode #2}}
\fi
%    \end{macrocode}
% \end{macro}
